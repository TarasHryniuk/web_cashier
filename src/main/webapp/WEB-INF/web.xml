        </filter-mapping>
    -->


    <!--============================================================
        Context listener
    =============================================================-->
    <listener>
        <listener-class>cashier.web.listener.ContextListener</listener-class>
    </listener>


    <!--============================================================
        Error page
    =============================================================-->
    <error-page>
        <exception-type>java.lang.Throwable</exception-type>
        <location>/error_page.jsp</location>
    </error-page>

    <error-page>
        <error-code>404</error-code>
        <location>/error_page.jsp</location>
    </error-page>
</web-app>